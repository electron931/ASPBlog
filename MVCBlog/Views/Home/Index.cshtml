<div class="container" style="margin-top: 30px;">
    <div class="row">
@{
  int i = 1;
}
        <div class="megacolumn">

            @for (var j = 0; j < 3; j++)
            {  
    <div class="columns">
        <div class="post_item">
	        <div class="post-body">
		        <a href="page.html">
			        <div class="large_thumb thumb_hover">
				        <div class="img_wrapper">
					        <img class="thumb" src=@Url.Content("~/Content/themes/base/images/pic" + i + ".jpg")>
                            @{i += 3;}
                            @if (i > 9)
                            {
                                i = 1;
                            }
                                     
						</div>
				    </div>
		        </a>
		        <h3 class="post_item_title">
			        <a rel="bookmark" href="page.html">@Model.Posts[j].Title</a>
		        </h3>
		        <div class="post_meta">
			        <span class="user">by <span style="color: #E74C3C;">@Model.Posts[j].Author.Login</span></span>
		            <span class="time">@Model.Posts[j].PostedOn.ToShortDateString()</span>
	           </div>
			   <div class="post_item_inner">
