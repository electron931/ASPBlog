										<option value="#">–&nbsp;Archive</option>
										<option value="#">–&nbsp;Authors</option>
										<option value="#">–&nbsp;Help</option>
										<option value="#">–&nbsp;Read this</option>
										<option value="#">&nbsp;Contacts</option>
										<option value="#">&nbsp;About</option>
									</select>

									<span class="nav_select">Navigation ...
										<span class="menu_icon_wrapper">
											<span class="menu_icon"></span>
										</span>
									</span>
									
									<div class="header_search">
										<div class="search_zoom search_btn"></div>
										<div class="search_box">
											@using(Html.BeginForm("Search", "Info", FormMethod.Get, new { id = "searchform" }))
                                            {
												<input class="search_input" id="s" name="searchText"
													   placeholder="Type &amp; hit enter to search" type="text">
											}
										</div>
									</div>
								</div>
                                <div class="login_wrapper">
                                <div class="login_icon">
                
                                </div>
                                @if (HttpContext.Current.User.Identity.IsAuthenticated)
                                    {
                                        <a href="" class="user_name">@HttpContext.Current.User.Identity.Name</a>
                                    }
                                <div class="sign_in invisible">  
                                    <div class="sign_in_inner">
                                        @if (HttpContext.Current.User.Identity.IsAuthenticated)
                                        {
                                            <a href="/logout" class="sign_in_inner_first">Sign out</a>
                                        }
                                        else
                                        {
                                            <a href="/login" class="sign_in_inner_first">Sign in</a>
                                        }
                                        <br />
                                        <a href="/register">Register</a>
                                    </div>
                                </div>
							</div>
                            </div>
							<div class="clear"></div>
						</div>
					</div>
				</div>
			</div>
            
        </div>